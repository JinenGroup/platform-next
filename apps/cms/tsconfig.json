{
  "extends": "@jinen/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"],
      "@assets/*": ["./assets/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
